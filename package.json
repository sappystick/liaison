{
  "name": "liaison-chatbot-platform",
  "version": "1.0.0",
  "description": "No-code AI chatbot platform for small businesses with NFT template marketplace",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:chatbot\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:chatbot": "cd chatbot-runtime && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "setup": "./scripts/setup-liaison.sh",
    "deploy": "./scripts/deploy-production.sh",
    "contracts:compile": "cd contracts && npx hardhat compile",
    "contracts:deploy": "cd contracts && npx hardhat run scripts/deploy.js --network localhost",
    "db:migrate": "cd backend && npm run migrate",
    "db:seed": "cd backend && npm run seed"
  },
  "keywords": [
    "chatbot",
    "no-code",
    "ai",
    "small-business",
    "nft",
    "docker",
    "saas",
    "automation",
    "customer-service"
  ],
  "author": "lIAison Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sappystick/liaison.git"
  },
  "bugs": {
    "url": "https://github.com/sappystick/liaison/issues"
  },
  "homepage": "https://github.com/sappystick/liaison#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.57.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "frontend",
    "backend",
    "chatbot-runtime",
    "marketplace",
    "contracts"
  ]
}